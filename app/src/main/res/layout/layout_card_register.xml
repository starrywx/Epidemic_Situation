<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
            xmlns:android = "http://schemas.android.com/apk/res/android"
            xmlns:app = "http://schemas.android.com/apk/res-auto"
            android:orientation = "vertical"
            android:layout_width = "320dp"
            android:layout_height = "480dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white">

           <RelativeLayout
           android:id = "@+id/rl_container_card_register"
           android:layout_width = "match_parent"
           android:layout_height = "match_parent">

            <TextView
            android:id = "@+id/tv_phone_register"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "手机"
            android:textSize="18sp"
            android:textColor="#4D4D4D"
            android:layout_alignStart="@id/et_phone_register"
            android:layout_marginTop="30dp"
            />

            <com.rengwuxian.materialedittext.MaterialEditText
            android:id = "@+id/et_phone_register"
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            android:hint="请输入手机号码"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_phone_register"
            app:met_primaryColor="@color/editText_underline_chosen"
            app:met_errorColor="@color/editText_underline_error"
            />

            <TextView
            android:id = "@+id/tv_verification"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "验证码"
            android:textSize="18sp"
            android:textColor="#4D4D4D"
            android:layout_below="@id/et_phone_register"
            android:layout_alignStart="@id/et_phone_register"
            android:layout_marginTop="15dp"
            />

            <RelativeLayout
            android:id = "@+id/rl_verification_register"
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            android:layout_alignStart="@id/tv_phone_register"
            android:layout_below="@id/tv_verification"
            >
               <com.rengwuxian.materialedittext.MaterialEditText
               android:id = "@+id/et_verification"
               android:layout_width = "match_parent"
               android:layout_height = "wrap_content"
               android:hint="请输入验证码"
               app:met_primaryColor="@color/editText_underline_chosen"
               app:met_errorColor="@color/editText_underline_error"
               app:met_hideUnderline="true"
               />

            <TextView
            android:id = "@+id/tv_get_verification"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text = "获取验证码"
            android:textColor="@color/able_get_verification_disable"
            android:textSize="16sp"
            android:clickable="true"
            />

            <View
            android:id = "@+id/underLine_et_verification"
            android:layout_width = "match_parent"
            android:layout_height = "1dp"
            android:background="@color/editText_underline_normal"
            android:layout_below="@id/et_verification"
            />
            </RelativeLayout>


            <TextView
            android:id = "@+id/tv_password_register"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "密码"
            android:textSize="18sp"
            android:textColor="#4D4D4D"
            android:layout_below="@id/rl_verification_register"
            android:layout_alignStart="@id/et_phone_register"
            android:layout_marginTop="15dp"
            />

            <com.rengwuxian.materialedittext.MaterialEditText
            android:id = "@+id/et_password_register"
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            android:hint="请输入密码"
            app:met_primaryColor="@color/editText_underline_chosen"
            app:met_errorColor="@color/editText_underline_error"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_password_register"
            />
            <TextView
            android:id = "@+id/tv_password_register_confirm"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "密码"
            android:textSize="18sp"
            android:textColor="#4D4D4D"
            android:layout_below="@id/et_password_register"
            android:layout_alignStart="@id/et_phone_register"
            android:layout_marginTop="15dp"
            />

            <com.rengwuxian.materialedittext.MaterialEditText
            android:id = "@+id/et_password_register_confirm"
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            android:hint="请输入确认密码"
            app:met_primaryColor="@color/editText_underline_chosen"
            app:met_errorColor="@color/editText_underline_error"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_password_register_confirm"
            />


            <Button
            android:id="@+id/btn_register"
            android:layout_width = "210dp"
            android:layout_height = "40dp"
            android:text = "注册"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/shape_button_register_login"
            />


        </RelativeLayout>



</androidx.cardview.widget.CardView>