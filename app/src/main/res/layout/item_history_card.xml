<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="359dp"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="158dp"
        app:cardCornerRadius="9dp"
        app:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/location"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginStart="18dp"
                    android:text="遇到患者的地点"
                    android:textColor="#EA6F6F"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/item_history_card_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:text="2020/02/02/14:08"
                    android:textColor="#767676"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_history_card_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="16dp"
                android:text="广州大学城体育中心"
                android:textColor="#79ACEE"
                android:textSize="16sp"
                />

            <TextView
            android:id="@+id/item_history_card_tv_spot"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:text="番禺区-大学城内环东路"
            android:textColor="#5C5C5C"
            android:textSize="12sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"
                android:text="点击卡片查看地图"
                android:textColor="#C3C3C3"
                android:textSize="9sp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="22dp"/>
</LinearLayout>