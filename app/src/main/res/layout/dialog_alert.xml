<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="256dp"
    android:layout_height="211dp"
    android:background="@drawable/alert_bg">

    <TextView
        android:id="@+id/dialog_alert_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="24dp"
        android:text="2020/02/02/14:08"
        android:textColor="#767676"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/dialog_alert_imv_delete"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/delete" />

    <TextView
        android:id="@+id/dialog_alert_tv_title"
        android:layout_width="64dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="感染风险"
        android:textColor="#EA6F6F"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dialog_alert_tv_probability"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="77dp"
        android:text="93%"
        android:textColor="#EA6F6F"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/dialog_alert_tv_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:text="感染风险极高，请自行在家隔离"
        android:textColor="#EA6F6F"
        android:textSize="14sp" />

    </RelativeLayout>